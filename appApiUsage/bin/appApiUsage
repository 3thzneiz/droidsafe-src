#!/bin/bash
SCRIPTNAME=`basename $0`
BINDIR=`dirname $0`
APPDIR=`(cd $BINDIR/..; pwd)`
LIBDIR=$APPDIR/../../lib
DROIDSAFE_DIR=$APPDIR/../..
DROIDSAFE_BINDIR=$APPDIR/../../bin
APPJAR=$APPDIR/bin/appApiUsage.jar

for JARFILE in $LIBDIR/*.jar $DROIDSAFE_BINDIR/*jar; do
    APP_CLASSPATH=$APP_CLASSPATH:$JARFILE
done

APP_CLASSPATH=$APPJAR:$APP_CLASSPATH
if [ "$#" -eq 0 ]; then
    java -cp $APP_CLASSPATH droidsafe.tools.ApiUsageListing 
else
    java -cp $APP_CLASSPATH droidsafe.tools.ApiUsageListing -a $DROIDSAFE_DIR/android-lib/android.jar -a $DROIDSAFE_DIR/android-lib/android-impl.jar $1 $2 $3 $4 $5 $6 $7 $8 $9
fi
